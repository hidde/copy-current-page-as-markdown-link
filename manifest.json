{
  "manifest_version": 2,
  "name": "Copy page as Markdown URL",
  "version": "1.0.0",

  "background": 
    {
      "scripts": ["/background.js"]
    }
  ,

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "48": "/copy.svg"
    }
  },

  "permissions": [
    "activeTab",
    "tabs"
  ]
}
